<%= form_for [:admin, @customer] do |f| %>
	<%= render "shared/error_messages", object: f.object %>
	Name: <%= f.text_field :name, class: "form-control" %> <br>
	Address: <%= f.text_field :address, class: "form-control" %> <br>
	Phone: <%= f.text_field :phone, class: "form-control" %> <br>
	<%= f.submit class: "btn btn-primary" %>
<% end %>
