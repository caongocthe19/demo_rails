<div class="container" style="padding-top: 20px">
  <h2 class="text-center">All Services</h2>
  <table class="table text-center">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% i = 0 %>
      <% @services.each do |service| %>
        <tr>
          <td><%= i += 1 %></td>
          <td><%= service.name %></td>
          <td><%= service.unit_price %></td>
          <td><%= link_to "Edit", edit_admin_service_path(service), class: "btn btn-primary" %> | <%= link_to "Destroy", admin_service_path(service), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Create", new_admin_service_path, class: "btn btn-success" %>

</div>
